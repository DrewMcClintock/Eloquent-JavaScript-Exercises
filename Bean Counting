function countBs(word){
  let count = 0
  let x = String(word);
  for (let i = 0; i < x.length; i++){
    if (x[i] === "B")
      count += 1;
  }
      return count;
  }
function countChar(word, letter){
  let count = 0
  let x = String(word);
  for (let i = 0; i < x.length; i++){
    if (x[i] === letter)
      count += 1;
  }
      return count;
  }


console.log(countBs("BBC"));
// → 2
console.log(countChar("kakkerlak", "k"));
// → 4
